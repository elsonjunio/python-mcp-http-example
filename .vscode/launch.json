    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Arquivo Atual",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
        },
        {
            "name": "Python: src/main.py",
            "type": "python",
            "request": "launch",
            "program": "src/main.py",
            "args": [],
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "Python: mcp_simple_resource.py",
            "type": "python",
            "request": "launch",
            "program": "src/server/mcp_simple_resource.py",
            "args": ["--port", "8000"],
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "Python: client",
            "type": "python",
            "request": "launch",
            "program": "src/client/client.py",
            "args": ["http://localhost:8000/sse"],
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            }
        }
    ]
}